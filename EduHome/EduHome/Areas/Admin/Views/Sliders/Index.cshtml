@model List<Slider>
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <h4 class="card-title">Slider</h4>
                    <a class="btn btn-primary text-white mx-2 btn-rounded" asp-action="Create">Create</a>
                </div>
                <div class="table-responsive pt-3">
                    <table id="mySliders" class="table table-bordered">
                        <thead>
                            <tr>

                                <th>
                                    Image
                                </th>

                                <th>
                                    Title
                                </th>

                                <th class="text-right">
                                    Actions
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Slider item in Model)
                            {
                                <tr>

                                    <td>
                                        <img style="width:120px;height:120px;object-fit:cover"  src="~/img/slider/@item.Image">
                                    </td>

                                    <td>
                                        @item.Title
                                    </td>

                                    

                                    <td>
                                        <div class="d-flex justify-content-end">
                                            <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-warning text-white mx-2 btn-rounded">Detail</a>
                                            <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-success text-white mx-2 btn-rounded">Update</a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger text-white mx-2 btn-rounded">Delete</a>
                                        </div>
                                    </td>

                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script>
        $(document).ready(function () {
            $('#mySliders').DataTable();
        });</script>
}
